{
  "name": "@devflow/cli",
  "version": "1.7.0",
  "description": "DevFlow CLI - Universal orchestrator command-line interface",
  "author": "DevFlow Team",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "devflow": "./bin/run"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "tsc && oclif manifest"
  },
  "files": [
    "dist",
    "bin",
    "oclif.manifest.json"
  ],
  "keywords": [
    "devflow",
    "cli",
    "orchestrator",
    "automation",
    "temporal"
  ],
  "dependencies": {
    "@devflow/common": "workspace:*",
    "@devflow/sdk": "workspace:*",
    "@oclif/core": "^3.15.1",
    "@oclif/plugin-help": "^6.0.9",
    "@oclif/plugin-plugins": "^4.1.8",
    "axios": "^1.6.5",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "dotenv": "^16.3.1",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@oclif/test": "^3.1.3",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "oclif": {
    "bin": "devflow",
    "dirname": "devflow",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "connect": {
        "description": "Connect DevFlow to external services (Notion, GitHub)"
      },
      "api-keys": {
        "description": "Manage API keys for DevFlow"
      },
      "templates": {
        "description": "Generate CI/CD templates"
      }
    }
  }
}
