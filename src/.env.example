# OpenRouter API Key (required)
OPENROUTER_API_KEY=sk-or-v1-xxx

# Linear API Key (required) - Get from: Settings → API → Personal API keys
LINEAR_API_KEY=lin_api_xxx

# Linear Webhook Secret (optional) - For verifying webhook signatures
LINEAR_WEBHOOK_SECRET=

# Status that triggers spec generation (default: "To Spec")
LINEAR_TRIGGER_STATUS=To Spec

# Status to move to after spec generation (optional)
LINEAR_NEXT_STATUS=Spec Ready

# Server port (default: 3001)
PORT=3001

# Spec Engine Model Overrides (optional)
# SPEC_ENGINE_REFINE_MODEL=openai/gpt-4o-mini
